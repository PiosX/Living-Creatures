extends ../_includes/layout

block variables
  - var template = 'home'

block content
  .home 
    .home__wrapper  
      section.home__header#header
        h1.home__title(data-animation="title")=home.data.main_title 

      each section in home.data.body
        if section.slice_type == 'intro'
          section.home__intro
            h2.home__intro__title1(data-animation="title")=section.primary.title1
            .home__intro__box
              h2.home__intro__box__title2(data-animation="title")=section.primary.title2
              p.home__intro__box__desc(data-animation="paragraph")=section.primary.description
            figure.home__intro__media
              img.home__intro__media__image(data-src=section.primary.image.url alt=section.primary.image.alt)
        
        if section.slice_type == 'content'
          section.home__content 
            h2.home__content__title1(data-animation="title")=section.primary.title1
            h2.home__content__title2(data-animation="title")=section.primary.title2
            each media in section.items 
              figure.home__content__media
                img.home__content__media__image(data-src=media.image.url, alt=media.image.alt)
          
        if section.slice_type == 'highlights'
          section.home__highlights 
            h2.home__highlights__title(data-animation="title")=section.primary.title
            .home__highlights__wrapper
              .home__highlights__content 
                .home__highlights__content__item
              .home__highlights__box  
                each content in section.items 
                  h3.home__highlights__box__subtitle=content.subtitle
                  p.home__highlights__box__desc=content.description

        if section.slice_type == 'components'
          section.home__components 
            a.home__components__enter(href="/sunlight")=section.primary.enter
            p.home__components__text(data-animation="title")=section.primary.text
            a.home__components__emerge(href="#header")=section.primary.emerge

        if section.slice_type == 'footer'
          section.home__footer
            p.home__footer__cpr="Copyright Â© 2022"
            .home__footer__box
              each link in section.items 
                a.home__footer__link(href=link.link.url)=link.text